[Unit]
Description=Siri Remote to Devialet Bridge
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/devialet-pi-remote
ExecStart=/home/pi/devialet-pi-remote/venv/bin/python main.py
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
